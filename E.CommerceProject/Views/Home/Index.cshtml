<style>
	
	.col-md-2-4
	{
		width: 20%;
		float: left;
		padding-left: 15px;
		padding-right: 15px;
		box-sizing: border-box;
	}

	.row {
		margin-left: -15px;
		margin-right: -15px;
	}

	.shop-img img {
		max-width: 100%;
		height: auto;
	}


	/*Wishlist*/
	.add-to-wishlist {
		background-color: #ffffff;
		border: none;
		color: #D10024;
		border-radius: 50%;
		width: 40px;
		height: 40px;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		cursor: pointer;
		position: relative;
		transition: background-color 0.2s ease;
		font-size: 16px;
	}

		.add-to-wishlist:hover {
			background-color: #f5f5f5;
		}


		.add-to-wishlist .tooltipp {
			visibility: hidden;
			opacity: 0;
			position: absolute;
			top: -30px;
			background: #000;
			color: #fff;
			padding: 5px 10px;
			font-size: 12px;
			border-radius: 4px;
			white-space: nowrap;
			transition: all 0.2s ease;
			z-index: 10;
		}

		.add-to-wishlist:hover .tooltipp {
			visibility: visible;
			opacity: 1;
		}
