@model E.CommerceProject.Models.Supplier

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_MLayout.cshtml";
}

<style>
    form {
        margin-left: 60px;
        margin-top: 100px;
    }
</style>


<div class="container">
    <h2>Tạo mới</h2>
    <div class="card">
        <form asp-controller="Supplier" asp-action="Create" enctype="multipart/form-data">
            <div class="table-title" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-6">
                        <h2 style="color:black"></h2>
                    </div>
                    <div class="col-sm-6">
                        <a class="btn btn-primary" asp-controller="Supplier" asp-action="Index"><b>Quay lại</b><i class='fas'>&#xf3e5;</i></a>
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> <b>Lưu lại</b> </button>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="number" class="form-control" asp-for="Id" hidden>
            </div>

            <div class="mb-3 mt-3">
                <label for="" class="form-label"><b>Tên nhà cung cấp</b></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Nhập vào tên nhà cung cấp">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3 mt-3">
                <label for="" class="form-label"><b>Địa chỉ</b></label>
                <input type="text" class="form-control" asp-for="Address" placeholder="Nhập vào địa chỉ">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-3 mt-3">
                <label for="" class="form-label"><b>Email</b></label>
                <input type="email" class="form-control" asp-for="Email" placeholder="Nhập vào địa chỉ email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3 mt-3">
                <label for="" class="form-label"><b>Điện thoại</b></label>
                <input type="number" class="form-control" asp-for="Phone" placeholder="Nhập vào số điện thoại">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>


            @* <div class="mb-3 mt-3"> *@
            @*     <label for="" class="form-label"><b>Mã số thuế</b></label> *@
            @*     <input type="number" class="form-control" asp-for="TaxCode" placeholder="Nhập vào mã số thuế"> *@
            @*     <span asp-validation-for="TaxCode" class="text-danger"></span> *@
            @* </div> *@

            <div class="mb-3 mt-3">
                <label for="" class="form-label"><b>Logo nhà cung cấp </b></label>
                <input type="file" class="form-control" asp-for="Logo" placeholder="Nhập vào tên logo thương hiệu">
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>

            <!-- Nút gửi -->
            <div class="table-title" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-6">
                        <h2 style="color:black"></h2>
                    </div>
                    <div class="col-sm-6">
                        <a class="btn btn-primary" asp-controller="Supplier" asp-action="Index"> <b>Quay lại</b> <i class='fas'>&#xf3e5;</i></a>
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> <b>Lưu lại</b> </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


