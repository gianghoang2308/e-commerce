@model E.CommerceProject.Models.BillingAddress

@{
    ViewData["Title"] = "Tạo địa chỉ mới";
    Layout = "~/Views/Shared/_MLayout.cshtml";
}

<style>
    form {
        margin-left: 60px;
        margin-top: 100px;
    }
</style>

<div class="container">
    <h2>Tạo địa chỉ thanh toán / giao hàng</h2>
    <div class="card p-4">
        <form asp-controller="BillingAddress" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-check mb-4">
                <input class="form-check-input" type="checkbox" asp-for="ShiptoDifferenceAddress" id="toggleShipping" />
                <label class="form-check-label" for="toggleShipping">
                    Gửi đến địa chỉ khác?
                </label>
            </div>

            <!-- Billing Address Section -->
            <div id="billingSection">
                <h4>Thông tin thanh toán</h4>
                <div class="mb-3">
                    <label class="form-label"><b>Họ</b></label>
                    <input type="text" class="form-control" asp-for="BillingAddressFirstName" placeholder="Nhập vào họ"/>
                    <span asp-validation-for="BillingAddressFirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label"><b>Tên</b></label>
                    <input type="text" class="form-control" asp-for="BillingAddressLastName" />
                    <span asp-validation-for="BillingAddressLastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label"><b>Email</b></label>
                    <input type="email" class="form-control" asp-for="BillingAddressEmail" />
                    <span asp-validation-for="BillingAddressEmail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label"><b>Địa chỉ</b></label>
                    <input type="text" class="form-control" asp-for="BillingAddressAddress" />
                    <span asp-validation-for="BillingAddressAddress" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label"><b>Thành phố</b></label>
                    <input type="text" class="form-control" asp-for="BillingAddressCity" />
                    <span asp-validation-for="BillingAddressCity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label"><b>Quốc gia</b></label>
                    <input type="text" class="form-control" asp-for="BillingAddressCountry" />
                    <span asp-validation-for="BillingAddressCountry" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label"><b>Mã bưu chính</b></label>
                    <input type="text" class="form-control" asp-for="BillingAddressZipCode" />
                    <span asp-validation-for="BillingAddressZipCode" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label"><b>Số điện thoại</b></label>
                    <input type="text" class="form-control" asp-for="BillingAddressTelephone" />
                    <span asp-validation-for="BillingAddressTelephone" class="text-danger"></span>
                </div>
            </div>

            <!-- Shipping Address Section -->
            <div id="shippingSection" style="display:none;">
                <h4>Thông tin giao hàng</h4>

                <div class="mb-3">
                    <label class="form-label"><b>Họ</b></label>
                    <input type="text" class="form-control" asp-for="ShippingAddressFirstName" />
                    <span asp-validation-for="ShippingAddressFirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label"><b>Tên</b></label>
                    <input type="text" class="form-control" asp-for="ShippingAddressLastName" />
                    <span asp-validation-for="ShippingAddressLastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label"><b>Email</b></label>
                    <input type="email" class="form-control" asp-for="ShippingAddressEmail" />
                    <span asp-validation-for="ShippingAddressEmail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label"><b>Địa chỉ</b></label>
                    <input type="text" class="form-control" asp-for="ShippingAddressAddress" />
                    <span asp-validation-for="ShippingAddressAddress" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label"><b>Thành phố</b></label>
                    <input type="text" class="form-control" asp-for="ShippingAddressCity" />
                    <span asp-validation-for="ShippingAddressCity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label"><b>Quốc gia</b></label>
                    <input type="text" class="form-control" asp-for="ShippingAddressCountry" />
                    <span asp-validation-for="ShippingAddressCountry" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label class="form-label"><b>Mã bưu chính</b></label>
                    <input type="text" class="form-control" asp-for="ShippingAddressZipCode" />
                    <span asp-validation-for="ShippingAddressZipCode" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label"><b>Số điện thoại</b></label>
                    <input type="text" class="form-control" asp-for="ShippingAddressTelephone" />
                     <span asp-validation-for="ShippingAddressTelephone" class="text-danger"></span>
                </div>
            </div>

            <div class="text-end mt-4">
                <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
                <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Lưu</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        const toggle = document.getElementById('toggleShipping');
        const billingSection = document.getElementById('billingSection');
        const shippingSection = document.getElementById('shippingSection');

        function toggleAddressSections() {
            if (toggle && toggle.checked) {
                shippingSection.style.display = 'block';
                billingSection.style.display = 'none';
            } else {
                shippingSection.style.display = 'none';
                billingSection.style.display = 'block';
            }
        }

        if (toggle) {
            toggle.addEventListener('change', toggleAddressSections);
            window.addEventListener('DOMContentLoaded', toggleAddressSections);
        }
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}

