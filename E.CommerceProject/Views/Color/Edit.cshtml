@model E.CommerceProject.Models.Color

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_MLayout.cshtml";
}

<style>
    form {
        margin-left: 60px;
        margin-top: 100px;
    }
</style>


<div class="container">
    <h2>Chỉnh sửa</h2>
    <div class="card">
        <form asp-controller="Color" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="table-title" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-6">
                        <h2 style="color:black"></h2>
                    </div>
                    <div class="col-sm-6">
                        <a class="btn btn-primary" asp-controller="Color" asp-action="Index"><b>Quay lại</b><i class='fas'>&#xf3e5;</i></a>
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> <b>Lưu lại</b> </button>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="number" class="form-control" asp-for="Id" hidden>
            </div>

            <div class="mb-3 mt-3">
                <label for="" class="form-label"><b>Mã màu</b></label>
                <input type="text" class="form-control" asp-for="ColorCode" placeholder="Nhập vào mã màu">
                <span asp-validation-for="ColorCode" class="text-danger"></span>
            </div>

            <div class="mb-3 mt-3">
                <label for="" class="form-label"><b>Tên màu</b></label>
                <input type="text" class="form-control" asp-for="ColorName" placeholder="Nhập vào tên màu">
                <span asp-validation-for="ColorName" class="text-danger"></span>
            </div>

            <!-- Nút gửi -->
            <div class="table-title" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-6">
                        <h2 style="color:black"></h2>
                    </div>
                    <div class="col-sm-6">
                        <a class="btn btn-primary" asp-controller="Color" asp-action="Index"> <b>Quay lại</b> <i class='fas'>&#xf3e5;</i></a>
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> <b>Lưu lại</b> </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


