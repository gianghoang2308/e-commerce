@model E.CommerceProject.Models.Comment

@{
    ViewData["Title"] = "Tạo Bình Luận";
}

<h2>Tạo Bình Luận cho sản phẩm: @ViewBag.Product?.Name</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CommentText"></label>
        <textarea asp-for="CommentText" class="form-control"></textarea>
        <span asp-validation-for="CommentText" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rate"></label>
        <select asp-for="Rate" class="form-control">
            <option value="">--Chọn đánh giá--</option>
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <span asp-validation-for="Rate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Gửi bình luận</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
