@model E.CommerceProject.Models.User
@if (TempData["RegisterSuccess"] != null)
{
    <div class="alert alert-success">
        @TempData["RegisterSuccess"]
    </div>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up Form by Colorlib</title>

    <!-- Font Icon -->
    <!-- Thêm vào <head> trong Views/Shared/_Layout.cshtml hoặc layout chính -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/15.7.0/nouislider.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Main css -->
    <link rel="stylesheet" href="~/user/css/style.css">
</head>
<body>

    <div class="main">
        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Đăng ký</h2>
                        <form method="POST" asp-controller="User" asp-action="Register" class="register-form" id="register-form">
                            <div class="form-group">
                                <label for="name"><i class="fa-solid fa-user"></i></label>
                                <input type="text" asp-for="UserAccount" id="name" placeholder="Tên tài khoản" />
                                <span asp-validation-for="UserAccount" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="name"><i class="fa-solid fa-key"></i></label>
                                <input type="password" asp-for="UserPassword" id="name" placeholder="Mật khẩu" />
                                <span asp-validation-for="UserPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="name"><i class="fa-solid fa-signature"></i></label>
                                <input type="text" asp-for="FullName" id="name" placeholder="Tên người dùng" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="name"><i class="fa-solid fa-phone"></i></label>
                                <input type="tel" asp-for="PhoneNumber" id="name" placeholder="Số điện thoại" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="fa-solid fa-envelope"></i></label>
                                <input type="email" asp-for="Email" id="email" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="images/signup-image.jpg" alt="sing up image"></figure>
                        <a asp-controller="User" asp-action="Login" class="signup-image-link">I am already member</a>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- JS -->
    <script src="~/user/vendor/jquery/jquery.min.js"></script>
    <script src="~/user/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}